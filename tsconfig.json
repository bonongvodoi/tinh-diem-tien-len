{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es6",
    "jsx": "react",
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "outDir": "built",
    "rootDir": "src",
    "sourceMap": true,
    "allowJs": true,
    "importHelpers": true,
    "types": [
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "built"
  ],
  "compileOnSave": false
}